 <%# render "users/shared/error_messages", resource: resource %>
<%= form_for @user, url: profile_path do |form| %>
    <div class="field">
        <%= form.label :url_image %>
        <%= form.text_area :url_image %>
    </div>
    <div class="field">
        <%= form.label :nickname %>
        <%= form.text_area :nickname %>
    </div>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_area :name %>
    </div>    
    <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>
    <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>
    <div class="field">
        <%= form.label :confirm_password %>
        <%= form.password_field :confirm_password %>
    </div>
     <%= form.submit nil %>
<% end %>