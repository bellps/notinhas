<%= form_for @note do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.rich_text_area :title %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>
  <div>
    <%= form.label :public %>
    <% {true: true, false: false}.each do |key, value| %>
        <%= form.radio_button :public, key %> <%= value %> <br>
    <% end %> 
  </div>
   <%= form.submit nil %>

<% end %>
